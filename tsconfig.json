{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "lib": [
            "es2017"
        ],
        "resolveJsonModule": true,
        "typeRoots": [
            "./node_modules/@types"
        ],
        "allowJs": false
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "libs/*",
        "gulp/*",
        "api/*",
        "views/*",
        "ng/*",
        "gulpfile.js",
        "server.js",
        "utils/*"
    ]
}